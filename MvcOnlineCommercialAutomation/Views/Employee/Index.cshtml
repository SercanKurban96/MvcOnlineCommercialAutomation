@using MvcOnlineCommercialAutomation.Models.Classes
@model List<Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        @*<th>ID</th>*@
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.EmployeeID</td>*@
            <td>@item.EmployeeName</td>
            <td>@item.EmployeeSurname</td>
            <td>
                <img src="@item.EmployeeImage" style="width:100px; height:100px;"/>
            </td>
            <td>@item.Department.DepartmentName</td>
            <td><a href="/Employee/EmployeeBring/@item.EmployeeID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Department/DepartmentEmployeeSale/@item.EmployeeID" class="btn btn-default" style="background-color:lightcoral; color:white">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Employee/EmployeeAdd/" class="btn btn-info">Personel Ekle</a>