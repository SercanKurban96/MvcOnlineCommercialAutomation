@using MvcOnlineCommercialAutomation.Models.Classes
@model List<InvoiceItem>
@{
    ViewBag.Title = "InvoiceDetail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalemleri Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InvoiceItemID</td>
            <td>@item.Description</td>
            <td>@item.Amount</td>
            <td>@item.UnitPrice</td>
            <td>@item.Sum</td>
        </tr>
    }
</table>
<a href="/Invoice/InvoiceItemAdd/" class="btn btn-default" style="background-color:darksalmon">Yeni Kalem Girişi</a>