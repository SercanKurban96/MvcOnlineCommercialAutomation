    ViewBag.Title = "DepartmentAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Departman Sayfası</h2>
<br />
<form class="form-group" method="post">
    @*@Html.LabelFor(x => x.DepartmentName)*@
