@using MvcOnlineCommercialAutomation.Models.Classes
@model List<Employee>
@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>
        @*<th>Personel ID</th>*@
        <th>Personel</th>
        @*<th>Görsel</th>*@
        <th>Satışlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.EmployeeID</td>*@
            <td>@item.EmployeeName @item.EmployeeSurname</td>
            @*<td>@item.EmployeeImage</td>*@
            <td><a href="/Department/DepartmentEmployeeSale/@item.EmployeeID" class="btn btn-default" style="background-color:navajowhite">Satışlar</a></td>
        </tr>
    }
</table>
