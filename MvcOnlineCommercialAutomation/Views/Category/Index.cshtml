@using MvcOnlineCommercialAutomation.Models.Classes
@using PagedList
@using PagedList.Mvc
@*@model List<Category>*@
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        @*<th>ID</th>*@
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.CategoryID</td>*@
            <td>@item.CategoryName</td>
            <td><a href="/Category/CategoryDelete/@item.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/CategoryBring/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }),
    new PagedListRenderOptions
    {
        LiElementClasses = new List<string>
        {
            "page-link"
        }
    })
<a href="/Category/CategoryAdd/" class="btn btn-primary">Kategori Ekle</a>